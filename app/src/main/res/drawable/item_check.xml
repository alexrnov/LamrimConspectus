<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/itemTopBottomBorder" />
            <solid android:color="@color/recyclerFill" />
        </shape>
    </item>

    <item
        android:top="28dp"
        android:right="0dp"
        android:gravity="center">
        <shape android:shape="rectangle">
            <size
                android:height="5dp"
                android:width="140dp" />
            <solid android:color="#ff5434" />
        </shape>
    </item>

    <item android:bottom="1dp">
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/recyclerFill" />
            <solid android:color="#00000000" />
        </shape>
    </item>

</layer-list>