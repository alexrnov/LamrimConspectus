<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/itemTopBottomBorder" />
            <solid android:color="@color/itemFillDefault" />
        </shape>
    </item>


    <item android:bottom="1dp">
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/itemFillChecked" />
            <solid android:color="#00000000" />
        </shape>
    </item>

    <item android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/itemFillChecked" />
        </shape>
    </item>

    <item
        android:top="34dp"
        android:right="40dp"
        android:left="40dp"
        android:gravity="center">
        <shape android:shape="line">
            <stroke android:width="2dp" android:color="@color/underlineItemChecked" />
        </shape>
    </item>

</layer-list>