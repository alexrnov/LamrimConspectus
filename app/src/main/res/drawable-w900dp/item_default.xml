<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/itemTopBottomBorder" />
            <solid android:color="@color/recyclerFill" />

        </shape>
    </item>

    <item
        android:top="34dp"
        android:right="0dp"
        android:gravity="center">
        <shape android:shape="rectangle">
            <size
                android:height="2dp"
                android:width="180dp" />
            <solid android:color="@color/underlineItemDefault" />
        </shape>
    </item>


    <item android:bottom="1dp">
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/recyclerFill" />
            <solid android:color="#00000000" />
        </shape>
    </item>

</layer-list>