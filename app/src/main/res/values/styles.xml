<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- transparent status bar when collapsing toolbar -->
        <item name="android:colorControlHighlight" tools:targetApi="lollipop">#00000000</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
        <item name="android:windowSharedElementsUseOverlay" tools:targetApi="lollipop">false</item>

        <!-- style for back arrow for settings app bar -->
        <item name="homeAsUpIndicator">@drawable/back_arrow</item>
        <item name="android:homeAsUpIndicator">@drawable/back_arrow</item>

    </style>

    <!-- them for settings activity -->
    <style name="AppThemeSettings" parent="AppTheme">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimaryDark</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog</item>
    </style>

    <!-- style for settings dialog -->
    <style name="AppTheme.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@color/background_content</item>
        <!-- button color -->
        <item name="colorPrimary">@color/colorAccent</item>
        <!-- I did not see what it affects -->
        <item name="colorPrimaryDark">@color/itemFillChecked</item>
        <!-- radio-button color -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextMenu" parent = "@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/menuTextColor</item>
    </style>

    <style name="ActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/appBarColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ActionBarCollapse" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="homeAsUpIndicator">@drawable/back_arrow</item>
        <item name="android:homeAsUpIndicator">@drawable/back_arrow</item>
    </style>

    <style name="ToolbarTitleCollapsed" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/appBarElementsColor</item>
        <!-- <item name="android:textStyle">bold</item> -->
    </style>

    <!-- styles for title text of the collapsing appbar -->
    <style name="ToolbarTitleExpanded" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">29sp</item>
        <item name="android:textColor">@color/appBarElementsColor</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#aacbb4</item>
    </style>

    <!-- // style for popup menu
    <style name="YOURSTYLE" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/menuTextColor</item>
        <item name="android:itemBackground">@drawable/popup_item_selector</item>
        <item name="android:textSize">15sp</item>
    </style>
    -->

</resources>
